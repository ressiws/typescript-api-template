# -------------------------------------------------------
# Node environment
# -------------------------------------------------------
NODE_ENV=development

# -------------------------------------------------------
# Application settings
# -------------------------------------------------------
APP_NAME=typescript-api-template
APP_PORT=3000
APP_VERSION=1.0.0

# -------------------------------------------------------
# Reverse proxy / networking
#
# If you run behind a reverse proxy (Nginx, Caddy, Cloudflare, etc),
# set TRUST_PROXY=true so Express uses X-Forwarded-* headers for req.ip.
# -------------------------------------------------------
TRUST_PROXY=false

# -------------------------------------------------------
# Database credentials
# -------------------------------------------------------
DB_HOST=localhost
DB_USER=root
DB_PASS=changeme
DB_NAME=api

# -------------------------------------------------------
# Security settings
# -------------------------------------------------------
# Headers
HEADERS_ENABLE=true

# IP Guard
IPGUARD_ENABLE=true
IPGUARD_WINDOW_MS=60000
IPGUARD_MAX_REQUESTS=100

# Validation
VALIDATE_ENABLE=true

# Auth
AUTH_ENABLE=true

# Rate Limit
RATE_LIMIT_ENABLE=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60

# Logging
LOGGING_ENABLE=true

# -------------------------------------------------------
# CORS settings (strict by design)
#
# If CORS_ORIGIN is defined:
# - Only the listed origins are allowed
#
# If CORS_ORIGIN is empty or undefined:
# - Requests with an Origin header are BLOCKED (browser requests)
# - Non-browser clients (curl, Postman, backend services) still work
#
# Use comma-separated values for multiple origins
# -------------------------------------------------------
#CORS_ORIGIN=http://localhost:5173,http://localhost:3000
#CORS_METHODS=GET,POST,PATCH,DELETE
CORS_CREDENTIALS=false
