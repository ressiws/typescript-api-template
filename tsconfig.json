{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Node",
		"outDir": "dist",
		"rootDir": "src",
		"baseUrl": "src",
		"paths": {
			"@/*": [
				"*"
			]
		},
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": [
		"src",
		"./.env"
	],
	"exclude": [
		"node_modules",
		"dist",
		"scripts",
		"docs"
	],
}